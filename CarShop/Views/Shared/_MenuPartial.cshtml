@{
    Layout = null;
    var controller = ViewContext.RouteData.Values["controller"]?
       .ToString()?
       .ToLower()
       ?? String.Empty;

    var area = ViewContext.RouteData.Values["area"]?
    .ToString()?
    .ToLower()
    ?? String.Empty;
}

<a class="navbar-brand" href="#">Car Shop</a>
@* <a class="navbar-brand" href="#">ASP Labs</a> *@
<div class="navbar-nav">
    <a class="nav-item nav-link @(controller == "home" ? "active" : "")" asp-action="Index" asp-controller="Home">Лаб 5</a>
    <a class="nav-item nav-link @(controller == "car" ? "active" : "")" asp-action="Index" asp-controller="Car">Каталог</a>
    <a class="nav-item nav-link @(area == "admin" ? "active" : "")" asp-area="Admin" asp-page="/Index">Администрирование</a>
</div>